<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EDDFB3"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:id="@+id/cardViewOfmodelImageView"
        android:layout_height="90dp"
        app:cardCornerRadius="190dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/modelImageView"
            android:layout_width="90dp"
            android:layout_height="90dp"

            android:scaleType="centerCrop"
            android:layout_below="@id/divider"
            android:src="@drawable/bgimage"
            />

    </androidx.cardview.widget.CardView>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/modelMessage"
        android:layout_height="wrap_content"
        android:layout_below="@id/modelUserName"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/cardViewOfmodelImageView"
        android:text="Hello EveryOne"
        android:textColor="@color/black"
        android:textSize="18sp" />

<!--        />-->
    <TextView
        android:id="@+id/modelUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/cardViewOfmodelImageView"
        android:text="Sadikur"
        android:textColor="#003865"
        android:textSize="15sp"
        android:textStyle="bold" />
</RelativeLayout>



    </androidx.cardview.widget.CardView>
</RelativeLayout>