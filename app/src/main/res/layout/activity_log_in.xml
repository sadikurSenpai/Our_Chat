<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAE2B6"
    tools:context=".LogInActivity">

    <EditText
        android:id="@+id/etname"
        android:layout_width="257dp"
        android:layout_height="65dp"
        android:fontFamily="@font/ubuntu_lightitalic"
        android:layout_marginTop="28dp"
        android:background="@drawable/edit_text_rounded"

        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Registered Email"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        app:barrierMargin="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
    <EditText
        android:id="@+id/etpass"
        android:layout_width="257dp"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_rounded"
        android:textSize="20sp"
        android:fontFamily="@font/ubuntu_lightitalic"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:barrierMargin="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etname" />


    <Button
        android:id="@+id/bsignin"
        android:layout_width="223dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#4B5D67"
        android:text="LOG in"

        android:textSize="20sp"
android:fontFamily="@font/ubuntu_bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etpass" />

    <TextView
        android:id="@+id/tvnoaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:text="Need an account?"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/ubuntu_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bsignin"
        app:layout_constraintVertical_bias="0.225" />

    <TextView
        android:id="@+id/tvsignup"
        android:layout_width="80dp"
        android:layout_height="27dp"
        android:fontFamily="@font/ubuntu_lightitalic"
        android:text="@string/signUpText"
        android:textColor="#4B5D67"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvnoaccount"
        app:layout_constraintTop_toBottomOf="@+id/bsignin"
        app:layout_constraintVertical_bias="0.225" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="136dp"
        android:layout_height="120dp"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_myplaces" />


</androidx.constraintlayout.widget.ConstraintLayout>